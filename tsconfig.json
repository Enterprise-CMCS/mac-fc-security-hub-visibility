{
  "include": ["src/*"],
  "compilerOptions": {
    "target": "ESNEXT",
    "lib": ["ES2021"],
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "test-setup": ["test-setup"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
}
